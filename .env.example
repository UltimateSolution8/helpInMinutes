# HelpInMinutes Environment Configuration
# Copy this file to .env and configure the values

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=HelpInMinutes
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0

# =============================================================================
# JWT Configuration
# =============================================================================
# Generate a strong 256-bit secret for production
JWT_SECRET=your-256-bit-secret-key-for-jwt-signing-here
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/helpinminutes
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=helpinminutes
DATABASE_USERNAME=helpinminutes
DATABASE_PASSWORD=helpinminutes_secret

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# RabbitMQ Configuration
# =============================================================================
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=helpinminutes
RABBITMQ_PASSWORD=helpinminutes_secret

# =============================================================================
# Razorpay Payment Gateway
# =============================================================================
# Get these from your Razorpay Dashboard
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# =============================================================================
# Google OAuth (Mobile App)
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# AWS S3 Configuration (Document Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=helpinminutes-documents
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain

# =============================================================================
# Service URLs (Development)
# =============================================================================
IDENTITY_SERVICE_URL=http://localhost:8081
TASK_SERVICE_URL=http://localhost:8082
MATCHING_SERVICE_URL=http://localhost:8083
PAYMENT_SERVICE_URL=http://localhost:8084
REALTIME_SERVICE_URL=http://localhost:3001

# =============================================================================
# Mobile App Configuration
# =============================================================================
EXPO_PUBLIC_API_BASE_URL=http://localhost:8081
EXPO_PUBLIC_REALTIME_URL=http://localhost:3001

# =============================================================================
# Admin Portal Configuration
# =============================================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8081
NEXT_PUBLIC_REALTIME_URL=http://localhost:3001

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_RETENTION=15d
GRAFANA_ADMIN_PASSWORD=helpinminutes_admin

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_GOOGLE_AUTH=true
FEATURE_APPLE_AUTH=false
FEATURE_OTP_LOGIN=true
FEATURE_LIVE_LOCATION=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# H3 Geo Configuration
# =============================================================================
H3_RESOLUTION=10
H3_MAX_K_RING=3

# =============================================================================
# Hyderabad Region Configuration
# =============================================================================
DEFAULT_LAT=17.3850
DEFAULT_LNG=78.4867
DEFAULT_CITY=Hyderabad
DEFAULT_STATE=Telangana

# =============================================================================
# Notification Configuration
# =============================================================================
FCM_SERVER_KEY=your_fcm_server_key
SMS_API_KEY=your_sms_api_key

# =============================================================================
# Encryption Keys
# =============================================================================
DOCUMENT_ENCRYPTION_KEY=your-32-character-encryption-key
